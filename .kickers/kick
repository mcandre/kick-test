#!/bin/bash
unset IFS
set -eufo pipefail

#
# Sync changes between local and remote for current git branch
#

git fetch --all --tags >/dev/null

git add . >/dev/null

if [ -n "$(git status --porcelain)" ]; then
    git commit -m 'up' >/dev/null
    git pull >/dev/null
    git push >/dev/null
fi

git push --tags
