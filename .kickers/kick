#!/bin/bash
unset IFS
set -eufo pipefail

usage() {
    printf "Usage: $0 [OPTIONS]\n\n"
    printf -- "-h\tShow usage menu\n"
    printf -- "-d\tEnable debug mode\n"
}

DEBUG=0

if [ "$#" -gt 0 ]; then
    ARG="$1"

    case "$ARG" in
        '-h')
            usage
            exit
            ;;
        '-d')
            DEBUG=1
            ;;
        *)
            usage
            exit 1
            ;;
    esac
fi

if [ "$DEBUG" ]; then
    exec &>/dev/null
    set -x
fi

#
# Sync changes between local and remote for current git branch
#

git fetch --all

git add .

if [ -n "$(git status --porcelain)" ]; then
    git commit -m 'up'
    git pull
    git push
fi

git fetch --tags
git push --tags
