#!/bin/bash
unset IFS
set -eufo pipefail

usage() {
    printf "Usage: $0 [OPTIONS]\n\n"
    printf -- "-h\tShow usage menu\n"
    printf -- "-d\tEnable debug mode\n"
}

REDIRECT='>/dev/null'
REDIRECT_PUSH='>/dev/null 2>&1'

enable_debugging() {
    REDIRECT=''
    REDIRECT_PUSH_TAGS=''
    set -x
}

if [ "$#" -gt 0 ]; then
    ARG="$1"

    case "$ARG" in
        '-h')
            usage
            exit
            ;;
        '-d')
            enable_debugging
            ;;
        *)
            usage
            exit 1
            ;;
    esac
fi

#
# Sync changes between local and remote for current git branch
#

git fetch --all $REDIRECT

git add . $REDIRECT

if [ -n "$(git status --porcelain)" ]; then
    git commit -m 'up' $REDIRECT
    git pull $REDIRECT
    git push $REDIRECT_PUSH
fi

git fetch --tags $REDIRECT
git push --tags $REDIRECT_PUSH
